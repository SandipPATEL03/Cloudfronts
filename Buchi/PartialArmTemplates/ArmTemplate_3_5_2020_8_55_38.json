									{
										"source": {
											"name": "Address3",
											"type": "String"
										},
										"sink": {
											"name": "address1_line3",
											"type": "String"
										}
									},
									{
										"source": {
											"name": "CreditLimit",
											"type": "Decimal"
										},
										"sink": {
											"name": "creditlimit",
											"type": "Decimal"
										}
									},
									{
										"source": {
											"name": "Address2",
											"type": "String"
										},
										"sink": {
											"name": "address1_line2",
											"type": "String"
										}
									},
									{
										"source": {
											"name": "PhoneNo",
											"type": "String"
										},
										"sink": {
											"name": "telephone1",
