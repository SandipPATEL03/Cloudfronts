									{
										"source": {
											"name": "EmailId",
											"type": "String"
										},
										"sink": {
											"name": "emailaddress1",
											"type": "String"
										}
									}
								]
							}
						},
						"inputs": [
							{
								"referenceName": "AzureSql_dst_Account",
								"type": "DatasetReference"
							}
						],
						"outputs": [
							{
								"referenceName": "CFT130Accounts",
								"type": "DatasetReference"
							}
						]
					}
				],
				"annotations": []
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/datasets/CFT130Accounts')]"
			]
