											"type": "String"
										},
										"sink": {
											"name": "address1_country",
											"type": "String"
										}
									},
									{
										"source": {
											"name": "Address1",
											"type": "String"
										},
										"sink": {
											"name": "address1_line1",
											"type": "String"
										}
